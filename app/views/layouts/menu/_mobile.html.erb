<div class="ui borderless menu" id="mobile">
  <div class="ui simple dropdown item">
    <i class="large user icon"></i>
    <div class="menu">

      <% if user_signed_in? %>
        <div class="item">
          <%= link_to "Settings", edit_user_registration_path, class: "item" %>
        </div>
      <% else %>
        <div class="item">
          <%= link_to "Sign In", new_user_session_path, class: "item" %>
        </div>
      <% end %>

      <% if account_signed_in? %>
        <div class="item">
          <%= link_to "Sign Out", destroy_user_session_path, { method: "delete", class: "item" } %>
        </div>
      <% end %>

    </div>
  </div>

  <div class="right menu">
    <div class="ui simple dropdown item">
      <i class="large sidebar icon"></i>

      <div class="menu">
        <div class="item">
          <%= link_to "Forums", forums_path, class: "item" %>
        </div>
        <div class="item">
          <%= link_to "Wiki", wiki_index_path, class: "item" %>
        </div>

        <div class="item">
          <%= link_to "Search", topics_path, class: "item" %>
        </div>

        <% if user_signed_in? %>
          <div class="item">
            <%= link_to "Bookmarks", bookmarks_path, class: "item" %>
          </div>

          <div class="item">
            <%= link_to "My Posts", posts_path, class: "item" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
