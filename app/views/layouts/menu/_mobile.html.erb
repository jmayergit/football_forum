<div class="ui borderless menu" id="mobile">
  <div class="ui simple dropdown item">
    <i class="user icon"></i>
    <div class="menu">

      <% if user_signed_in? %>
        <div class="item">
          <%= link_to "Settings", edit_user_registration_path, class: "item" %>
        </div>
      <% else %>
        <div class="item">
          <%= link_to "Sign In", new_user_session_path, class: "item" %>
        </div>
      <% end %>

      <% if account_signed_in? %>
        <div class="item">
          <%= link_to "Sign Out", destroy_user_session_path, { method: "delete", class: "item" } %>
        </div>
      <% end %>

    </div>
  </div>
</div>
