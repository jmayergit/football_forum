<%= form_for [@topic, @post] do |f| %>
  <% if errors?(@post) %>
    <%= instance_error_messages!(@post) %>
  <% end %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.hidden_field :topic_id, value: params[:topic_id] %>

  <%= f.text_area :body, placeholder: "Body" %><br />

  <%= f.submit %>
<% end %>
